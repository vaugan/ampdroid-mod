<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:clickable="true"
	android:background="@drawable/quickcontact_slider_btn" android:layout_width="60dip" android:paddingLeft="2dip" android:paddingRight="2dip">

	<ImageView
		android:id="@+id/icon" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:src="@drawable/quickaction_play"/>

	<TextView 
		android:id="@+id/title"
		android:layout_height="fill_parent" 
		android:textSize="11sp"
		android:textColor="#666" android:text="Stream" android:gravity="center" android:layout_width="60dip" android:layout_marginTop="5dip" android:maxLines="1" android:lines="1"/>
</LinearLayout>
